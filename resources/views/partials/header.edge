<!-- Desktop Header -->
<header class="w-full items-center bg-white py-2 px-6 hidden sm:flex">
    <div class="w-1/2"></div>
    <div x-data="{ isOpen: false }" class="relative w-1/2 flex justify-end">
        <button @click="isOpen = !isOpen" class="realtive z-10 w-12 h-12 rounded-full overflow-hidden focus:outline-none">
            <img src="https://avatars.dicebear.com/api/initials/{{ user.name }}.svg">
        </button>
        <button x-show="isOpen" @click="isOpen = false" class="h-full w-full fixed inset-0 cursor-default"></button>
        <div x-show="isOpen" class="absolute w-32 bg-white rounded-lg shadow-lg py-2 mt-16">
            <a href="#" class="block px-4 py-2 account-link hover:text-white">Minha conta</a>
            <a href="#" class="block px-4 py-2 account-link hover:text-white">Suporte</a>
            <a href="{{ route('auth.signout') }}" class="block px-4 py-2 account-link hover:text-white">Sair</a>
        </div>
    </div>
</header>

<!-- Mobile Header & Nav -->
